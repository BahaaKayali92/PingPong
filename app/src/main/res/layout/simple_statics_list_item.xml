<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@drawable/rectangleshape"
    android:gravity="center_horizontal"

    android:orientation="vertical">

    <TextView
        android:layout_centerVertical="true"

        android:paddingRight="10dp"
        android:id="@+id/player_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MALONG"
        android:textColor="@color/black" />

    <TextView
        android:layout_marginTop="10dp"
        android:background="@color/yellow"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:id="@+id/firstPlayer_score"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/player_name"
        android:text="11"
        android:gravity="center"

        android:textColor="@color/black" />

    <ImageView
        android:padding="0dp"
        android:layout_marginTop="20dp"
        android:layout_centerVertical="true"
        android:paddingRight="20dp"
        android:id="@+id/match_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/firstPlayer_score"
        android:src="@drawable/vs" />

    <TextView
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:background="@color/yellow"
        android:id="@+id/secondPlayer_score"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/match_logo"
        android:text="11"
        android:textColor="@color/black" />

    <TextView
        android:layout_centerVertical="true"
        android:id="@+id/secondPlayer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/secondPlayer_score"
        android:text="MALONG"
        android:textColor="@color/black" />
</RelativeLayout>